<div class="card">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h3><%= Contact.model_name.human(count: 2) %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <table class="table responsive table-striped">
        <thead>
          <tr>
            <th><%= Tracking.human_attribute_name('name') %></th>
            <th><%= Tracking.human_attribute_name('email') %></th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
